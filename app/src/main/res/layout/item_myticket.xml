<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_11sdp"
    android:layout_marginLeft="@dimen/_6sdp"
    android:layout_marginRight="@dimen/_6sdp"
    android:background="@drawable/bg_tiketku"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/_31sdp"
        android:orientation="horizontal"
        android:background="@drawable/btn_login_effect"
        android:layout_height="@dimen/_31sdp">

        <TextView
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:id="@+id/xjumlah_tiketku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="@dimen/_21sdp"
            android:layout_marginStart="@dimen/_11sdp"
            android:layout_marginBottom="@dimen/_21sdp"
            android:layout_width="@dimen/_62sdp"
            android:src="@drawable/qr"
            android:layout_height="@dimen/_61sdp"
            android:contentDescription="@string/ilus" />

        <LinearLayout
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/xnama_tiket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/xlokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:textStyle="normal" />


        </LinearLayout>

     </LinearLayout>

</LinearLayout>